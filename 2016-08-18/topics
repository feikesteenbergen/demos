
cluster_name
============
SELECT CASE
            WHEN setting = ''
            THEN ''
            ELSE format('(%s)', setting)
       END AS cluster_name
  FROM pg_settings WHERE name='cluster_name'
\gset
\set PROMPT1 '%n@%/':cluster_name'%R%#%x '
\set PROMPT2 '-> '

select format('EXPLAIN %s', query) from pg_stat_activity where pg_backend_pid() <> pid ORDER BY random() LIMIT 1
\gexec


pg_activity

csv fdw
